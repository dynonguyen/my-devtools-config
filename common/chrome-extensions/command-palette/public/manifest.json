{
	"manifest_version": 3,
	"name": "Command Palette",
	"version": "1.0.0",
	"description": "A command palette to navigate in Google Chrome faster âš¡",
	"icons": {
		"16": "logo.png",
		"32": "logo.png",
		"64": "logo.png",
		"128": "logo.png"
	},
	"action": { "default_icon": "logo.png" },
	"permissions": ["bookmarks", "scripting", "favicon", "tabs"],
	"background": {
		"service_worker": "background.js"
	},
	"commands": {
		"_execute_action": {
			"suggested_key": { "default": "Ctrl+Shift+P", "mac": "Command+Shift+P" },
			"description": "Open command palette"
		}
	}
}
